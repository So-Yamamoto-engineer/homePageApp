<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/name.css">
    <title>Name</title>
</head>
<body>
    <div id="name"></div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            let nameContainer = document.getElementById("name");
            let name = "やまもとそう 山本蒼";
            let letters = [];

            name.split("").forEach(function(letter) {
                let span = document.createElement("span");
                span.textContent = letter;
                span.classList.add("letter");
                nameContainer.appendChild(span);
                letters.push(span);
            });

            // 文字をランダムに配置する
            letters.forEach(function(letter) {
                let x = Math.random() * window.innerWidth;
                let y = Math.random() * window.innerHeight;
                letter.style.left = x + "px";
                letter.style.top = y + "px";
            });

            const centerX = window.innerWidth / 2; //中央のx座標
            const centerY = window.innerHeight / 2; //中央のy座標
            const letterWidth = letters[0].offsetWidth + 10;
            const letterHeight = letters[0].offsetHeight;
            const totalWidth = name.length * letterWidth;
            const startX = centerX - totalWidth / 2;

            setTimeout(function() {
                letters.forEach(function(letter, index) {
                    letter.style.opacity = 1;
                    letter.style.transition = "all 2s ease"; 
                    
                    let x = startX + index * letterWidth;
                    let y = centerY - letterHeight / 2;
                    letter.style.left = x + "px";
                    letter.style.top = y + "px";
                    console.log(`index = ${index}`)
                    console.log(`centerX = ${centerX}`)
                    console.log(`centerY = ${centerY}`)
                    console.log(`letterWidth = ${letterWidth}`)
                    console.log(`letterHeight = ${letterHeight}`)
                    console.log(`totalWidth = ${totalWidth}`)
                    console.log(`startX = ${startX}`)
                    console.log(`x = ${x}`)
                    console.log(`y = ${y}`)

                });
            }, 300); // 1秒後にアニメーション開始
        });
    </script>

    <div class="btn11">
        <a href="/home">return</a>
    </div>

    <footer>
    <p>© 2023  So's Home Page</p>
    </footer>
